{% extends 'base.html.twig' %}
{% block title %}Wild Series{% endblock %}
{% block body %}
    <div class="media">
        <img class="align-self-start mr-3 w-25" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ program.summary }}</p>
            <p>Catégorie : {{ program.category.name }}</p>
            <p>Saisons disponibles :</p>
            <ul>
                {% for season in program.seasons %}
                <li><a href="/programs/{{ program.id}}/seasons/{{ season.id }}">{{ season.number }} : {{ season.description }}</a></li>
                {% else %}
                    Aucune saison trouvée.
                {% endfor %}
            </ul>
        </div>
    </div>

    <a href="{{ path('program_index') }}">
        Retour à la liste des programmes
    </a>
{% endblock %}